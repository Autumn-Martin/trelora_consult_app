<%= image_tag("TRELORA-Logo.png", class:"logo")%>

<h2>Listing Consultation Tool</h2>

<div>
  <%= form_tag login_path do %>
    <div class="form-group">
      <%= label_tag :email, "Member Email" %>
      <%= email_field_tag :email, nil, class: "form-control", 'aria-describedby' => "emailHelp" %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: 'form-control' %>
    </div>
    <button class= "login-button"> <%= submit_tag "Login", class: "btn btn-primary btn-lg" %></button>
  <% end %>
</div>
