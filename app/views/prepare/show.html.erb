  <a class="navbar-brand" href="#">
    <%= image_tag("TRELORA-Logo.png", class:"tiny_logo")%>
  </a>
  <a class="font-weight-bold" style="color: #A4C950;" href="#"><h3>Prepare</h3></a>
  <button class="btn" type="button" style="text-align: right; background_color: #A4C950;" href="#"><h4>Go to Collect</h4></button>
